<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/githubInputBox"
        android:hint="input user name"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/githubSearchBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/githubSearchBtn"
        android:text="搜索"
        app:layout_constraintRight_toRightOf="parent"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/githubRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/githubInputBox">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>