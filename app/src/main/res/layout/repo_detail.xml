<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tokenInput"
        android:hint="输入Token（作业上TOKEN写死即可）"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleInput"
        android:hint="输入Title"
        app:layout_constraintTop_toBottomOf="@id/tokenInput"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyInput"
        android:hint="输入body"
        app:layout_constraintTop_toBottomOf="@id/titleInput"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addIssueBtn"
        android:text="增加ISSUE"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyInput"
        android:layout_marginTop="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/issueRecyclerView"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/addIssueBtn"
        android:layout_marginBottom="20dp">

    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>